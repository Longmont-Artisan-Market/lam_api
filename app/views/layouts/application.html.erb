<!DOCTYPE html>
<html>
  <head>
    <title>Longmont Artisan Market</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
  <nav class = "topnav", style="text-align: right; padding-right: 50px; padding-top: 50px">
    <%= link_to "Home Page", "/" %>
    <% if @current_user == nil %>
      <%= link_to "Login", "/login" %>
    <% else %>
     <%= link_to "Logout", "/login", method: :delete %>
     <%= link_to "Profile", "/profile" %>
    <% end %>
  </nav>

    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash", style="text-align: center">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
