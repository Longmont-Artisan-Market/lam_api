<h1 align= "center">Register as a New User</h1>
<center>
  <%= form_tag '/users', method: :post do |f| %>

    <%= label_tag :name %>
    <%= text_field_tag :name %>

    <%= label_tag :business_name %>
    <%= text_field_tag :business_name %>

    <%= label_tag :email_address %>
    <%= text_field_tag :email_address %>

    <%= label_tag :password %>
    <%= text_field_tag :password %>

    <%= label_tag :password_confirmation %>
    <%= text_field_tag :password_confirmation %>

    <%= submit_tag 'Complete Registration' %>
  <% end %>
</center>
